      "placeholders": [
        {
          "id": "title",
          "type": "title",
          "x": 0.1,
          "y": 0.3,
          "width": 0.8,
          "height": 0.2,
          "font": {
            "name": "微软雅黑",
            "size": 60,
            "bold": true,
            "color": "#2C3E50"
