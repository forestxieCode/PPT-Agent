{
  "template_id": "simple_001",
  "template_name": "简约风格模板",
  "version": "1.0",
  "description": "简洁清爽的演示模板，适用于学术报告、技术分享等场景",
  "theme": {
    "colors": {
      "primary": "#2C3E50",
      "secondary": "#3498DB",
      "accent": "#E74C3C",
      "text_dark": "#2C3E50",
      "text_light": "#FFFFFF",
      "background": "#FFFFFF"
    },
    "fonts": {
      "title": {
        "name": "微软雅黑",
        "size": 44,
        "bold": true,
        "italic": false,
        "color": "#2C3E50"
      },
      "subtitle": {
        "name": "微软雅黑",
        "size": 24,
        "bold": false,
        "italic": false,
        "color": "#3498DB"
      },
      "heading": {
        "name": "微软雅黑",
        "size": 28,
        "bold": true,
        "italic": false,
        "color": "#2C3E50"
